{
  "name": "beacon-tool",
  "version": "1.1.3",
  "description": "Collection of bluetooth beaconing tools.",
  "main": "index.js",
  "scripts": {
    "test": "mocha --recursive \"./{,!(node_modules)/**/}*.test.js\"",
    "tdd": "mocha --recursive --watch \"./{,!(node_modules)/**/}*.test.js\"",
    "lint": "eslint './{,!(node_modules)/**/*.js}'"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "mocha": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "script",
      "impliedStrict": false
    },
    "extends": [
      "@haensl"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm test"
    }
  },
  "keywords": [
    "beaconing",
    "tools",
    "bluetooth",
    "beacon",
    "altbeacon",
    "ibeacon",
    "eddystone",
    "tool"
  ],
  "author": {
    "name": "HP Dietz",
    "email": "h.p.dietz@gmail.com",
    "twitter": "@h_p_d",
    "url": "https://hpdietz.com"
  },
  "engines": {
    "node": ">= 8.11.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/haensl/beacon-tool"
  },
  "bugs": {
    "url": "git+https://github.com/haensl/beacon-tool/issues"
  },
  "homepage": "https://github.com/haensl/beacon-tool#readme",
  "license": "MIT",
  "devDependencies": {
    "@haensl/eslint-config": "^1.3.0",
    "chai": "^4.2.0",
    "eslint": "^7.19.0",
    "husky": "^4.3.8",
    "mocha": "^8.2.1"
  }
}
